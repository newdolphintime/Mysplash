<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_photo_more_page_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/normal_margin"
    android:layout_marginRight="@dimen/normal_margin"
    android:layout_marginBottom="@dimen/normal_margin"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_rise_item"
    app:cardBackgroundColor="@color/colorPrimary_dark"
    app:cardCornerRadius="2dp"
    app:cardElevation="@dimen/low_elevation"
    tools:ignore="RtlHardcoded,UnusedAttribute">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.wangdaye.mysplash.common.ui.widget.freedomSizeView.FreedomImageView
            android:id="@+id/item_photo_more_page_horizontal_cover"
            android:layout_width="172dp"
            android:layout_height="128dp"
            android:scaleType="centerCrop"
            app:fiv_not_free="true"
            app:fiv_shadow_position="top"
            tools:src="?attr/title_color" />

        <com.wangdaye.mysplash.common.ui.widget.CircleImageView
            android:id="@+id/item_photo_more_page_horizontal_avatar"
            android:layout_width="@dimen/mini_icon_size"
            android:layout_height="@dimen/mini_icon_size"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_alignRight="@id/item_photo_more_page_horizontal_cover"
            android:layout_alignBottom="@id/item_photo_more_page_horizontal_cover"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@animator/touch_rise_avatar"
            tools:src="@drawable/default_avatar_round"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/item_photo_more_page_horizontal_title"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/colorTextDark2nd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/normal_margin"
            android:layout_above="@id/item_photo_more_page_horizontal_avatar"
            android:layout_alignRight="@id/item_photo_more_page_horizontal_cover"
            style="@style/title_text"
            tools:text="LET THE INSPIRATION BEGIN"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>